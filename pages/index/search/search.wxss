/* pages/index/search/search.wxss */
page {
  background: #fff;
  height: 100%;
}
.search_container {
  height: 100%;
  background: #f1f1f1;
}
.search_wrap {
  width: 100%;
  height: 40px;
  border-bottom: 0.5px solid #ccc;
  background: #fff;
}
.search_input {
  width: calc(100% - 90px);
  height: 30px;
  margin: 5px 0 5px 10px;
  display: inline-block;
  background: #f1f1f1;
  border-radius: 15px;
  line-height: 30px;
  position: relative;
}
.search_input_res {
  width: calc(100% - 20px);
  height: 30px;
  margin: 5px 10px;
  display: inline-block;
  background: #f1f1f1;
  border-radius: 15px;
  line-height: 30px;
  position: relative;
}
.search_input .icon,
.search_input_res .icon {
  font-size: 14px;
  line-height: 30px;
  position: absolute;
  top: 0;
  left: 8px;
  color: #b1b8ba;
}
.search_input .search,
.search_input_res .search {
  width: calc(100% - 40px);
  height: 30px;
  margin-left: 30px;
  display: inline-block;
}
.input-placeholder {
  color: #b1b8ba;
  font-size: 14px;
  line-height: 30px;
}
.search_button {
  width: 80px;
  height: 30px;
  margin: 5px 0;
  display: inline-block;
}
.search_button .cancel {
  color: #3D4E56;
  margin-left: 10px;
}
.search_button .search {
  color: #fff;
  background: #3D4E56;
  margin-left: 10px;
}

.search_body {

}
.filter {
  height: 40px;
  width: 100%;
  border-bottom: 0.5px solid #ccc;
  background: #fff;
}

.filter_fixed {
  position: fixed;
  top: 0;
  left: 0;
  height: 40px;
  width: 100%;
  border-bottom: 0.5px solid #ccc;
  background: #fff;
  z-index: 99;
}
.filter_item {
  display: inline-block;
  width: 25%;
  font-size: 14px;
  color: #b1b8ba;
  text-align: center;
  line-height: 40px;
}
.filter_active {
  color: #3D4E56;
  font-weight: 700;
}
.search_result,
.search_result_fixed {
  background: #f1f1f1;
  padding: 10px 10px 0 10px;
}
.search_result_fixed {
  margin-top: 41px;
}

.result_item {
  display: inline-block;
  width: calc(50% - 5px);
  background-color: #fff;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,.12), 0 0 6px 0 rgba(0,0,0,.04);
  border-radius: 2px;
  margin-bottom: 10px;
}
.result_item:nth-child(odd) {
  margin-right: 10px;
}
.result_item .item_image {
  height: 0;
  padding-bottom: 100%;
  position: relative;
  /*border-bottom: 0.5px solid #b1b8ba;*/
  background-position: center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.item_image image {
  width: 100%;
  height: 100%;
  position: absolute;
}
.result_item .item_info {
  height: 50px;
  padding: 5px;
}
.item_info .name {
  height: 25px;
  font-size: 14px;
  line-height: 25px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #b1b8ba;
}
.item_info .price {
  height: 25px;
  font-size: 18px;
  line-height: 25px;
  color: #3D4E56;
}

.toTop {
  position: fixed;
  right: 0;
  bottom: 50px;
  width: 40px;
  height: 40px;
  background: rgba(0, 0, 0, 0.5);
  text-align: center;
  border-radius: 50%;
}
.toTop text {
  color: #fff;
  font-size: 20px;
  line-height: 40px;
}