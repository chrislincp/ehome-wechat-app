/* pages/index/classify/classify.wxss */

page {
  height: 100%;
}

.classify_container {
  height: 100%;
}

.search_wrap {
  width: 100%;
  height: 50px;
  border-bottom: 0.5px solid #ccc;
  background: #fff;
  position: relative;
}

.search {
  width: 90%;
  height: 30px;
  position: absolute;
  top: 10px;
  left: 5%;
  border-radius: 15px;
  background: #f1f1f1;
}

.search .search_text {
  font-size: 12px;
  line-height: 30px;
  color: #b1b8ba;
}

.search_text .icon {
  margin-left: 10px;
}

.search_text .title {
  margin-left: 5px;
}

.classify_body {
  display: flex;
  height: calc(100% - 51px);
  width: 100%;
}

.classify_left {
  height: 100%;
  flex: 0 0 80px;
  background: #fff;
  display: inline-block;
  overflow: hidden;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.classify_left .classify_name {
  width: 100%;
  height: 50px;
  font-size: 12px;
  line-height: 50px;
  text-align: center;
  color: #3d4e56;
  background: #f1f1f1;
}

.classify_left .active {
  background: #fff;
  font-size: 14px;
  font-weight: 700;
}

.classify_right {
  height: 100%;
  flex: 1;
  background: #fff;
  display: inline-block;
}
