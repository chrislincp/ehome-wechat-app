/* pages/me/myClient/myClient.wxss */
page {
  height: 100%;
  background: #f1f1f1;
}
.client_container {
  height: 100%;
  position: relative;
}
.client_search {
  width: 100%;
  height: 50px;
  background: #f1f1f1;
  position: fixed;
  top: 0;
  z-index: 99;
}
.client_search .search_wrap {
  width: 90%;
  height: 30px;
  background: #fff;
  margin: auto;
  position: relative;
  top: 10px;
  border-radius: 15px;
  display: flex;
  font-size: 14px;
}
.search_wrap .search_icon {
  height: 30px;
  flex: 0 0 30px;
  line-height: 30px;
  text-align: center;
  color: #b1b8ba;
}
.search_wrap .search_input {
  height: 30px;
  flex: 1;
}
.search_input input {
  height: 30px;
}
.input_class {
  color: #b1b8ba;
  line-height: 30px;
}
.client_list {
  width: 100%;
  height: calc(100% - 50px);
  position: absolute;
  top: 50px;
  background: #fff;
}
.client_list .client_item {
  margin-left: 20px;
  width: calc(100%-20px);
  height: 50px;
  border-bottom: 0.5px solid #ccc;
  line-height: 50px;
}
.client_item .name {
  font-size: 16px;
  color: #3D4E56;
}
.client_item .tel {
  font-size: 12px;
  color: #b1b8ba;
  float: right;
  margin-right: 20px;
}