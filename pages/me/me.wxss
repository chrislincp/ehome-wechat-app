/* pages/me/me.wxss */

/*未登录样式*/

.login {
  
}
.login_head {
  width: 100%;
  height: 100px;
  display: flex;
  background: #3D4E56;
}
.login_left {
  flex: 1;
  color: #fff;
  margin-left: 20px;
}
.login_left .login_register text {
  font-size: 24px;
  line-height: 100px;
}
.login_left .more text {
  font-size: 12px;
}
.login_right {
  flex: 0 0 20px;
  line-height: 100px;
  color: #fff;
  font-size: 24px;
}

/*登录样式*/

.info {

}
.info .info_head {
  width: 100%;
  height: 100px;
  display: flex;
  background: #3D4E56;
}
.info_head .head_wrap {
  width: 100%;
  height: 80px;
  margin: 10px 10px;
  display: flex;
}
.head_wrap .avatar {
  flex: 0 0 80px;
  border-radius: 50%;
  background-color: #fff;
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100%;
}
.head_wrap .main {
  flex: 1;
  position: relative;
  margin-left: 20px;
  color: #fff;
}
.main .name {
  font-size: 24px;
  margin: 10px 0;
}
.main .tel {
  font-size: 12px;
}
.main .setting {
  position: absolute;
  top: 0;
  right: 10px;
}

.info_content {
  
}
.info_content .my_points {
  width: 100%;
  height: 80px;
  background-color: #fff;
}
.coupon, .mall, .design {
  display: inline-block;
  width: calc(33.3333333333% - 1px);
  height: 100%;
  border-right: 0.5px solid #ccc;
}
.design {
  border-right: 0;
}

.my_points .value {
  height: 50px;
  line-height: 50px;
  font-size: 24px;
  text-align: center;
}
.my_points .unit {
  font-size: 12px;
}
.my_points .title {
  height: 40px;
  /*line-height: 30px;*/
  font-size: 12px;
  text-align: center;
  color: #3D4E56;
  /*background: blue;*/
}

.info_content .line {
  height: 40px;
  line-height: 40px;
  margin: 10px 0;
  background: #fff;
  color: #3D4E56;
  font-size: 14px;
  border-top: 0.5px solid #ccc;
  border-bottom: 0.5px solid #ccc;
}

.line .icon-left {
  width: 20px;
  display: inline-block;
  line-height: 40px;
  text-align: center;
}
.line .content {
  display: inline-block;
  width: calc(100% - 20px);
  height: 100%;
  border-bottom: 0.5px solid #ccc;
}
 .line .icon-right {
   float: right; 
  line-height: 40px;
  width: 20px;
} 

.line.logout {
  text-align: center;
}
.line_group {
  margin-top: 10px;
  border-top: 0.5px solid #ccc;
  border-bottom: 0.5px solid #ccc;
}
.line_group .line {
  margin: 0;
  border: 0;
}
.line_group .line:last-child .content {
  border-bottom: 0;
}